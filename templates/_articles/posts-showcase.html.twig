{% import "_macros/collection.html.twig" as collection %}
{% set showcase = true %}
      <article class="showcase {{ article.template }}" data-url="{{ article.url }}">
{% include [
        "_articles/_block/#{ article.template }_header_excerpt.html.twig",
        "_articles/_block/article_header_excerpt.html.twig"
      ] with { 'article': article } %}
{% include [
        "_articles/_block/#{ article.template }_main_excerpt.html.twig",
        "_articles/_block/article_main_excerpt.html.twig"
      ] with { 'article': article } %}
{{  collection.render(article, 'recent')  }}
      </article>
